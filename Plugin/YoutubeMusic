#!name = Youtube(Music)
#!desc = 屏蔽客户端广告
#!icon = https://img.ixintu.com/upload/jpg/20210623/b7b596e584ccf42adb1919e455265d79_27640_512_512.jpg!con
#!date = 2025-08-27

[Argument]
blockShorts    = switch, true, false, tag=移除短片
blockUpload    = switch, true, false, tag=移除上传
blockImmersive = switch, true, false, tag=移除选段

[Rewrite]
^https:\/\/[\w-]+\.googlevideo\.com\/initplayback.+&oad reject-dict

[Script]
http-response ^https:\/\/y[a-z]*i\.googleapis\.com\/youtubei\/v1\/(?:browse|next|player|search|reel\/reel_watch_sequence|guide|account\/get_setting|get_watch) script-path=https://raw.githubusercontent.com/Maasea/sgmodule/master/Script/Youtube/youtube.response.js, requires-body=true, binary-body-mode=true, timeout=10, tag=配置处理, argument=[{blockUpload},{blockShorts},{blockImmersive}]

[MitM]
hostname = *.googlevideo.com, youtubei.googleapis.com
